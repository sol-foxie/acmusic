<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Debug">

    <TextView
            android:text="..."
            android:textAlignment="center"
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:id="@+id/connectionDisplay" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="162dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp" android:layout_marginTop="181dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="..."
            android:textAlignment="center"
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:id="@+id/latLongDisplay" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="162dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp"
            app:layout_constraintTop_toBottomOf="@+id/connectionDisplay"/>
    <TextView
            android:text="..."
            android:textAlignment="center"
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:id="@+id/trackNameDisplay" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="162dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp"
            app:layout_constraintTop_toBottomOf="@+id/latLongDisplay"/>
    <TextView
            android:text="..."
            android:textAlignment="center"
            android:layout_width="356dp"
            android:layout_height="wrap_content"
            android:id="@+id/offlineExceptionDisplay" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="162dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp"
            app:layout_constraintTop_toBottomOf="@+id/trackNameDisplay"/>
    <TextView
            android:text="This screen displays information about the state of the app. None of this data is stored or sent to a server, btw."
            android:textAlignment="center"
            android:layout_width="356dp"
            android:layout_height="46dp"
            android:id="@+id/disclaimer" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="162dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="162dp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.506"/>
</android.support.constraint.ConstraintLayout>