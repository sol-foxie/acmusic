<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="@string/play"
            android:layout_width="121dp"
            android:layout_height="112dp"
            android:id="@+id/playPause"
            style="@android:style/Widget.Material.Button.Colored"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="132dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="131dp" tools:layout_editor_absoluteY="199dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/display" tools:text="@tools:sample/lorem" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="164dp" app:layout_constraintBottom_toTopOf="@+id/playPause"/>

</android.support.constraint.ConstraintLayout>