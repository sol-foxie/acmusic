<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="24dp"
            android:text="Select a track"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:id="@+id/textView"
            app:layout_constraintVertical_bias="0.032"/>
    <Spinner
            android:layout_width="368dp"
            android:layout_height="43dp"
            android:id="@+id/jukebox" android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/textView" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:entries="@array/spinnerItems"
    />
    <Button
            android:text="@string/play"
            android:layout_width="121dp"
            android:layout_height="112dp"
            android:id="@+id/playPause"
            style="@android:style/Widget.Material.Button.Colored" android:layout_marginTop="94dp"
            app:layout_constraintTop_toBottomOf="@+id/jukebox" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="132dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="131dp"/>

</android.support.constraint.ConstraintLayout>