<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Attributions">

    <View
            android:id="@+id/divider3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:textIsSelectable="true"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.384"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:text="@string/attributions_nintendo"
            app:layout_constraintTop_toBottomOf="@+id/divider2"/>
    <TextView
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView" app:layout_constraintTop_toTopOf="parent"
            android:textIsSelectable="true"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.384" android:layout_marginTop="16dp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:text="@string/attributions_chrome_extension"/>
    <TextView
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:textIsSelectable="true"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.384"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:text="@string/attributions_commission"
            app:layout_constraintTop_toBottomOf="@+id/textView3"/>
    <TextView
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:textIsSelectable="true"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.384"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:text="@string/attributions_contact"
            app:layout_constraintTop_toBottomOf="@+id/divider4"/>
    <TextView
            android:layout_width="355dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textIsSelectable="true"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.384"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:text="@string/attributions_nook_extension"
            app:layout_constraintTop_toBottomOf="@+id/divider1"/>
    <View
            android:id="@+id/divider1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toBottomOf="@+id/textView"/>
    <View
            android:id="@+id/divider2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    <View
            android:id="@+id/divider4"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toBottomOf="@+id/textView4"/>
</android.support.constraint.ConstraintLayout>